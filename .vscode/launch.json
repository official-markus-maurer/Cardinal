{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Cardinal Client",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/client/CardinalClient.exe",
            "args": ["--log-level", "DEBUG"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/client",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Full Build"
        },
        {
            "name": "Debug Cardinal Editor",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/editor/CardinalEditor.exe",
            "args": ["--log-level", "DEBUG"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/editor",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Full Build"
        }
    ]
}