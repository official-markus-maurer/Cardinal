{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Cardinal Client (Debug Build)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/client/Debug/CardinalClient.exe",
            "args": ["--log-level", "TRACE"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/client",
            "environment": [],
            "externalConsole": false,
            "console": "integratedTerminal",
            "MIMode": "gdb",
            "miDebuggerPath": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Full Build (Debug)"
        },
