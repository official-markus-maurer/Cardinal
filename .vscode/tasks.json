{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile Shaders",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Compile PBR Vertex Shader",
                "Compile PBR Fragment Shader",
                "Compile UV Vertex Shader",
                "Compile UV Fragment Shader",
                "Compile Wireframe Vertex Shader",
                "Compile Wireframe Fragment Shader"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Compile PBR Vertex Shader",
            "type": "shell",
            "command": "glslc",
            "args": [
                "pbr.vert",
                "-o",
                "C:/Users/${env:USERNAME}/Documents/Cardinal/assets/shaders/pbr.vert.spv"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}/assets/shaders"
            },
            "problemMatcher": []
        },
        {
            "label": "Compile PBR Fragment Shader",
            "type": "shell",
            "command": "glslc",
            "args": [
                "pbr.frag",
                "-o",
                "C:/Users/${env:USERNAME}/Documents/Cardinal/assets/shaders/pbr.frag.spv"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}/assets/shaders"
            },
            "problemMatcher": []
        },
        {
            "label": "Compile UV Vertex Shader",
            "type": "shell",
            "command": "glslc",
            "args": [
                "uv.vert",
                "-o",
                "C:/Users/${env:USERNAME}/Documents/Cardinal/assets/shaders/uv.vert.spv"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}/assets/shaders"
            },
            "problemMatcher": []
        },
        {
            "label": "Compile UV Fragment Shader",
            "type": "shell",
            "command": "glslc",
            "args": [
                "uv.frag",
                "-o",
                "C:/Users/${env:USERNAME}/Documents/Cardinal/assets/shaders/uv.frag.spv"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}/assets/shaders"
            },
            "problemMatcher": []
        },
        {
            "label": "Compile Wireframe Vertex Shader",
            "type": "shell",
            "command": "glslc",
            "args": [
                "wireframe.vert",
                "-o",
                "C:/Users/${env:USERNAME}/Documents/Cardinal/assets/shaders/wireframe.vert.spv"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}/assets/shaders"
            },
            "problemMatcher": []
        },
        {
            "label": "Compile Wireframe Fragment Shader",
            "type": "shell",
            "command": "glslc",
            "args": [
                "wireframe.frag",
                "-o",
                "C:/Users/${env:USERNAME}/Documents/Cardinal/assets/shaders/wireframe.frag.spv"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}/assets/shaders"
            },
            "problemMatcher": []
        },
        {
            "label": "Configure CMake",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                ".",
                "-B",
                "build",
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Build Project",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--config",
                "Release"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "Configure CMake",
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Full Build",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Compile Shaders",
                "Build Project"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "Launch Client",
            "type": "shell",
            "command": "./CardinalClient.exe",
            "args": [],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "showReuseMessage": false,
                "clear": true
            },
            "options": {
                "cwd": "${workspaceFolder}/build/client"
            },
            "dependsOn": "Full Build",
            "problemMatcher": []
        },
        {
            "label": "Launch Editor",
            "type": "shell",
            "command": "./CardinalEditor.exe",
            "args": [],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "showReuseMessage": false,
                "clear": true
            },
            "options": {
                "cwd": "${workspaceFolder}/build/editor"
            },
            "dependsOn": "Full Build",
            "problemMatcher": []
        },
        {
            "label": "Launch Client (Debug)",
            "type": "shell",
            "command": "./CardinalClient.exe",
            "args": [
                "--log-level",
                "DEBUG"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "showReuseMessage": false,
                "clear": true
            },
            "options": {
                "cwd": "${workspaceFolder}/build/client"
            },
            "dependsOn": "Full Build",
            "problemMatcher": {
                "owner": "cardinal-log",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^([^(]+)\\((\\d+)\\):\\s*\\[(ERROR|WARN|FATAL)\\]\\s*(.*)$",
                    "file": 1,
                    "line": 2,
                    "severity": 3,
                    "message": 4
                },
                "severity": {
                    "ERROR": "error",
                    "WARN": "warning",
                    "FATAL": "error"
                }
            }
        },
        {
            "label": "Launch Editor (Debug)",
            "type": "shell",
            "command": "./CardinalEditor.exe",
            "args": [
                "--log-level",
                "DEBUG"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "showReuseMessage": false,
                "clear": true
            },
            "options": {
                "cwd": "${workspaceFolder}/build/editor"
            },
            "dependsOn": "Full Build",
            "problemMatcher": {
                "owner": "cardinal-log",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^([^(]+)\\((\\d+)\\):\\s*\\[(ERROR|WARN|FATAL)\\]\\s*(.*)$",
                    "file": 1,
                    "line": 2,
                    "severity": 3,
                    "message": 4
                },
                "severity": {
                    "ERROR": "error",
                    "WARN": "warning",
                    "FATAL": "error"
                }
            }
        },
        {
            "label": "Clean Build",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "Remove-Item -Path 'build' -Recurse -Force -ErrorAction SilentlyContinue"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Rebuild All",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Clean Build",
                "Full Build"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "Run Clang-Tidy",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-ExecutionPolicy", "Bypass",
                "-File", "run-clang-tidy.ps1"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": {
                "owner": "clang-tidy",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error|note):\\s+(.*)\\s+\\[(.*)\\]$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5,
                    "code": 6
                }
            }
        },
        {
            "label": "View Cardinal Logs",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "if (Test-Path 'build/cardinal_debug.log') { Get-Content 'build/cardinal_debug.log' -Wait -Tail 50 } elseif (Test-Path 'cardinal_debug.log') { Get-Content 'cardinal_debug.log' -Wait -Tail 50 } else { Write-Host 'No Cardinal log file found. Run a debug session first.' }"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "showReuseMessage": false,
                "clear": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": {
                "owner": "cardinal-log",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^([^(]+)\\((\\d+)\\):\\s*\\[(ERROR|WARN|FATAL)\\]\\s*(.*)$",
                    "file": 1,
                    "line": 2,
                    "severity": 3,
                    "message": 4
                },
                "severity": {
                    "ERROR": "error",
                    "WARN": "warning",
                    "FATAL": "error"
                }
            }
        },
        {
            "label": "Format Code",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-ExecutionPolicy", "Bypass",
                "-File", "format-code.ps1"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        }
    ]
}