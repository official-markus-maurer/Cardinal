{
    "name": "PBR Opaque",
    "vertex_shader": {
        "path": "assets/shaders/pbr.vert.spv",
        "stage": 1
    },
    "fragment_shader": {
        "path": "assets/shaders/pbr.frag.spv",
        "stage": 16
    },
    "vertex_input": {
        "use_standard_layout": true
    },
    "input_assembly": {
        "topology": "triangle_list"
    },
    "rasterization": {
        "cull_mode": "none",
        "front_face": "clockwise",
        "depth_bias_enable": true
    },
    "multisampling": {
        "rasterization_samples": 1
    },
    "depth_stencil": {
        "depth_test_enable": true,
        "depth_write_enable": true,
        "depth_compare_op": "less_or_equal"
    },
    "color_blend": {
        "logic_op_enable": false,
        "attachments": [
            {
                "blend_enable": false,
                "color_write_mask": 15
            }
        ]
    },
    "dynamic_states": [ 0, 1, 3 ],
    "rendering": {
        "color_formats": [],
        "depth_format": 0
    }
}
